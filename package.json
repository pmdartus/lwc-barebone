{
  "name": "lwc-barebone",
  "description": "Starter project to experiment with LWC.",
  "repository": "github:pmdartus/lwc-barebone",
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rollup -c"
  },
  "devDependencies": {
    "@lwc/rollup-plugin": "^2.20.0",
    "@rollup/plugin-replace": "^4.0.0",
    "lwc": "^2.20.0",
    "rollup": "^2.75.7",
    "rollup-plugin-serve": "^2.0.0"
  },
  "prettier": {
    "overrides": [
      {
        "files": "src/**/*.html",
        "options": {
          "parser": "lwc"
        }
      }
    ]
  }
}
